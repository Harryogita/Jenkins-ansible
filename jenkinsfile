pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
                      }
            stage('ansible') {
             steps {
                  echo 'running ansible playbook from jenkinsfile'
                      ansiblePlaybook become: true, becomeUser: 'harry', credentialsId: 'gitkey', installation: 'ansible', inventory: 'dev.ini', playbook: 'apache.yml'                              
                             }
        stage('Declarative pipeline') {
            steps {
                echo "This is my first declarative pipeline syntax"
            }
        }
    }
}
